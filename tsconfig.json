{
  "compilerOptions": {
    "outDir": "./.tsbuild/",
    "sourceMap": false,
    "target": "es2019",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule" : true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "types": [
      "node",
      "@wdio/mocha-framework",
      "expect-webdriverio",
      "@wdio/globals/types",
    ],
    "baseUrl": "./",
    "paths": {
      "@config/*": ["./config/*"],
      "@fixtures/*": ["./tests/fixtures/*"],
      "@helpers/*": ["./tests/helpers/*"],
      "@screenobjects/*": ["./tests/screenobjects/*"],
      "@specs/*": ["./tests/specs/*"],
    }
  },
  "include": ["./config/**/*.ts", "./tests/**/*.ts"],
}
